<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.classifydemo.MainActivity">


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:hint="选择文件的目录" />

    <Button
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_hint"
        android:layout_alignStart="@+id/tv_hint"
        android:layout_below="@+id/tv_hint"
        android:text="选择" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/tv_hint"
        android:layout_alignLeft="@+id/select"
        android:layout_alignRight="@+id/tv_hint"
        android:layout_alignStart="@+id/select"
        android:layout_below="@+id/select"
        android:layout_marginTop="32dp"
        android:hint="保存到本地的路径为 sdcard/tmp/" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="开始" />


</RelativeLayout>
